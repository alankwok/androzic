<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

		<ImageButton
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/tick_button"
			android:id="@+id/finishedit" />
		<ImageButton
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/point_plus"
			android:id="@+id/addpoint" />
		<ImageButton
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/point_arrow"
			android:id="@+id/insertpoint" />
		<ImageButton
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/point_minus"
			android:id="@+id/removepoint" />
		<ImageButton
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/point_order"
			android:id="@+id/orderpoints" />

</merge>
