<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
		android:layout_gravity="top"
		android:layout_weight="1">
    
	   	<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="6dip"
			android:stretchColumns="0,1">

			<TableRow>
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/satellites" />
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/lastfix" />
			</TableRow>
			<TableRow>
			    <TextView android:id="@+id/sats"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--/--" />
			    <TextView android:id="@+id/lastfix"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />			
			</TableRow>
			<TableRow android:paddingTop="5dip">
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/accuracy" />
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/provider" />
			</TableRow>
			<TableRow>
			    <TextView android:id="@+id/accuracy"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />
			    <TextView android:id="@+id/provider"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />
			</TableRow>
			<TableRow android:paddingTop="5dip">
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/latitude" />
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/sunrise" />
			</TableRow>
			<TableRow>
			    <TextView android:id="@+id/latitude"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />
			    <TextView android:id="@+id/sunrise"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />			
			</TableRow>
			<TableRow android:paddingTop="5dip">
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/longitude" />
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/sunset" />
			</TableRow>
			<TableRow>
			    <TextView android:id="@+id/longitude"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />
			    <TextView android:id="@+id/sunset"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />			
			</TableRow>
			<TableRow android:paddingTop="5dip">
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/hdop" />
				<TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/declination" />
			</TableRow>
			<TableRow>
			    <TextView android:id="@+id/hdop"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />
			    <TextView android:id="@+id/declination"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />
			</TableRow>
			<TableRow android:paddingTop="5dip">
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/vdop" />
			    <TextView
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
			</TableRow>
			<TableRow>
			    <TextView android:id="@+id/vdop"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="--" />
			    <TextView android:id="@+id/nothing"
			    	android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium" />
			</TableRow>
		</TableLayout>
	</ScrollView>
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom"
	android:layout_weight="0">
    
	<Button android:id="@+id/almanac_button"
		android:text="@string/update_almanac"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:layout_gravity="center" />

</LinearLayout>
	
</LinearLayout>